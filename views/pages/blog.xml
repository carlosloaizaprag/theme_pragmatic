<odoo>
    <record id="website.contactus" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <record id="page_blog" model="website.page">
        <field name="name">Inicio</field>
        <field name="is_published" eval="True"/>
        <field name="key">theme_pragmatic.page_blog</field>
        <field name="url">/blog</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <t t-name="theme_pragmatic.page_blog">
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure">
                        <link rel="stylesheet" href="/../static/src/scss/style_blog.scss"/>
                        <header class="parallax">
                            <div class="card-container-blog text-center">
                                <div class="col-md-12">
                                    <h1 class="title-1">Blog Pragmatic Ingeniería</h1>
                                    <h5 class="card-title-blog text-center">Descubre aqui un espacio para aprender y
                                        adquirir mas informacion de nuestros servicios.
                                    </h5>
                                </div>
                            </div>
                        </header>

                        <div class="container text-center">
                            <div class="row-blog align-items-center">
                                <div class="col">
                                    <div class="card-blog" style="width: 18rem;">
                                        <img src="/theme_pragmatic/static/src/img/blog/image-facturacion.jpg"
                                             class="card-img-top" alt="location"/>
                                        <div class="card-body">
                                            <h5 class="card-title">Facturación Electronica</h5>
                                            <a href="#" class="btn btn-blog">Más info.</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="card-blog" style="width: 18rem;">
                                        <img src="/theme_pragmatic/static/src/img/blog/wompiLogo.png" class="card-img-top" alt="..."/>
                                        <div class="card-body">
                                            <h5 class="card-title">Pasarela de pago</h5>
                                            <a href="#" class="btn btn-blog">Más info.</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="card-blog" style="width: 18rem;">
                                        <img src="/theme_pragmatic/static/src/img/blog/image-tec.jpg" class="card-img-top" alt="..."/>
                                        <div class="card-body">
                                            <h5 class="card-title">Nuevas Tecnologías</h5>
                                            <a href="#" class="btn btn-blog">Más info.</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>
