<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="page_software_erp" model="website.page">
        <field name="name">Inicio</field>
        <field name="is_published" eval="True"/>
        <field name="key">theme_pragmatic.page_software_erp</field>
        <field name="url">/software_erp</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <t t-name="theme_pragmatic.page_software_erp">
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure">
                        <link rel="stylesheet" href="/../static/src/scss/style_home.scss"/>
                        <div class="container-country parallax">
                            <div class="software_erp_container">
                                <div class="container">
                                    <div class="row align-items-center">
                                        <div class="col-6">

                                            <h1 class="title-1-service">
                                                Más que una
                                                <b>pasarela</b>, una solución de recaudo para tu empresa
                                            </h1>
                                            <h2 class="sub-title-1-service">
                                                Recibe y concilia pagos de tus ventas de contado
                                                y a crédito, para tu negocio y tus canales comerciales,
                                                a través de nuestra solución innovadora y ajustada a tus procesos de
                                                negocio
                                            </h2>
                                            <a href="/contact" class="info-button">Mas información</a>
                                        </div>
                                        <div class="col-6">
                                            <img class="location"
                                                 src="/theme_pragmatic/static/src/img/software_erp/software_erp.png"
                                                 weight="400"
                                                 height="400" alt="location"/>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="card-container-servicie text-center">
                            <div class="row-service align-items-center">
                                <div class="col-md-4">
                                    <div class="card-servicie">
                                        <h5 class="service-card-title">
                                            Fácil integración
                                        </h5>
                                        <p class="sub-text-service">
                                            Con tu software y las soluciones del ecosistema de pagos y antifraude de
                                            mayor conveniencia.
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card-servicie">
                                        <h5 class="service-card-title">
                                            Consultoría y adaptación
                                        </h5>
                                        <p class="sub-text-service">
                                            Entendemos tu proceso de negocio para implementar la mejor tecnología.
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card-servicie">
                                        <h4 class="service-card-title">
                                            Liquidación y conciliación
                                        </h4>
                                        <p class="sub-text-service">
                                            Realizamos la liquidación de comisiones de tus canales. Así mismo, aplicamos
                                            y conciliamos en línea todos tus recaudos.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-container-servicie-II">
                            <div class="row-service-I justify-content-center align-items-start cards">
                                <link rel="stylesheet" href="/../static/src/scss/style_service.scss"/>
                                <div class="col-md-12">
                                    <h1 class="title-1-service-II">Software ERP</h1>
                                </div>
                            </div>

                            <div class="container-service-II mt-5-servive-II">
                                <div class="row-service-II justify-content-center">
                                    <!-- Columna 1: Contiene la imagen -->
                                    <div class="col-md-6">
                                        <img class="location"
                                             src="/theme_pragmatic/static/src/img/software_erp/image-erp.jpg"
                                             weight="300"
                                             height="298" alt="location"/>
                                        <div class="col-md-12-service-I">
                                            <div class="row">
                                                <div class="col-md-4 card-servicie-t">
                                                    <div class="card-tar-service">
                                                        <img class="location"
                                                             src="theme_pragmatic/static/src/img/software_erp/image-facture.png"
                                                             weight="40"
                                                             height="40" alt="location"/>
                                                        <p class="text-service">Facturación Electronica</p>
                                                    </div>
                                                </div>
                                                <!-- Columna 2.2 -->
                                                <div class="col-md-4 card-servicie-tt">
                                                    <div class="card-tar-services">
                                                        <img class="location"
                                                             src="theme_pragmatic/static/src/img/software_erp/image-diner.png"
                                                             weight="60"
                                                             height="60" alt="location"/>
                                                        <p class="text-service-I">Ventas</p>
                                                    </div>
                                                </div>
                                                <!-- Columna 2.3 -->
                                                <div class="col-md-4 card-servicie-ttt">
                                                    <div class="card-tar-service">
                                                        <img class="location"
                                                             src="theme_pragmatic/static/src/img/software_erp/image-facture.png"
                                                             weight="40"
                                                             height="40" alt="location"/>
                                                        <p class="text-service">Punto de venta</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Columna 2: Contiene tres columnas debajo de la imagen -->
                                    <div class="col-md-6">
                                        <div class="row-service-III">
                                            <!-- Columna 2.1 -->
                                            <div class="col-md-12">
                                                <div class="col-md-12">
                                                    <h4 class="sub-title-1-service-I">Software ERP</h4>
                                                    <h1 class="title-1-service-acor-I">¿Qué soluciones se ofrecen?</h1>
                                                </div>
                                                <div class="accordion" id="accordionPanelsStayOpenExample">
                                                    <div class="accordion-item">
                                                        <h2 class="accordion-header">
                                                            <button class="accordion-button" type="button"
                                                                    data-bs-toggle="collapse"
                                                                    data-bs-target="#panelsStayOpen-collapseOne"
                                                                    aria-expanded="true"
                                                                    aria-controls="panelsStayOpen-collapseOne">
                                                                Administramos y conciliamos
                                                            </button>
                                                        </h2>
                                                        <div id="panelsStayOpen-collapseOne"
                                                             class="accordion-collapse collapse show">
                                                            <div class="accordion-body">
                                                                De forma centralizada, segura y eficiente el recaudo
                                                                realizado a través de diferentes métodos (electrónico,
                                                                transferencias, tarjetas de crédito, efectivo).
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="accordion-item">
                                                        <h2 class="accordion-header">
                                                            <button class="accordion-button collapsed" type="button"
                                                                    data-bs-toggle="collapse"
                                                                    data-bs-target="#panelsStayOpen-collapseTwo"
                                                                    aria-expanded="false"
                                                                    aria-controls="panelsStayOpen-collapseTwo">
                                                                Gestionamos las suscripciones
                                                            </button>
                                                        </h2>
                                                        <div id="panelsStayOpen-collapseTwo"
                                                             class="accordion-collapse collapse">
                                                            <div class="accordion-body">
                                                                Recordatorios, fechas de plazo, pagos periódicos,
                                                                seguimiento y control de las facturas por cobrar.
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="accordion-item">
                                                        <h2 class="accordion-header">
                                                            <button class="accordion-button collapsed" type="button"
                                                                    data-bs-toggle="collapse"
                                                                    data-bs-target="#panelsStayOpen-collapseThree"
                                                                    aria-expanded="false"
                                                                    aria-controls="panelsStayOpen-collapseThree">
                                                                Logramos la estandarización de procesos
                                                            </button>
                                                        </h2>
                                                        <div id="panelsStayOpen-collapseThree"
                                                             class="accordion-collapse collapse">
                                                            <div class="accordion-body">
                                                                Reducción de tiempos de operación, costos y reprocesos;
                                                                además, evitamos el error humano y aumentamos la
                                                                efectividad en el cobro.
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-container-servicie-clients">
                            <div class="row justify-content-center align-items-start cards">
                                <link rel="stylesheet" href="/../static/src/scss/style_service.scss"/>
                                <div class="col-md-12">
                                    <h1 class="title-1-clients">Clientes ERP</h1>
                                </div>
                            </div>
                            <div class="clients">
                                <link rel="stylesheet"
                                      href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"/>
                                <div class="swiper clientsSwiper">
                                    <div class="swiper-wrapper">
                                        <div class="swiper-slide slide-clients div-one">
                                            <img class="clients-image"
                                                 src="theme_pragmatic/static/src/img/umanizales.png"/>
                                        </div>
                                        <div class="swiper-slide slide-clients">
                                            <img class="clients-image img-transfiriendo"
                                                 src="theme_pragmatic/static/src/img/logo-transfiriendo.png"/>
                                        </div>
                                        <div class="swiper-slide slide-clients">
                                            <img class="clients-image"
                                                 src="theme_pragmatic/static/src/img/logo-oncredit.png"/>
                                        </div>
                                        <div class="swiper-slide slide-clients">
                                            <img class="clients-image"
                                                 src="theme_pragmatic/static/src/img/proyecten.png"/>
                                        </div>
                                        <div class="swiper-slide slide-clients">
                                            <img class="clients-image" src="theme_pragmatic/static/src/img/pura.png"/>
                                        </div>
                                        <div class="swiper-slide slide-clients">
                                            <img class="clients-image img-loggin"
                                                 src="theme_pragmatic/static/src/img/loggin.png"/>
                                        </div>
                                        <div class="swiper-slide slide-clients">
                                            <img class="clients-image"
                                                 src="theme_pragmatic/static/src/img/bluma-design.png"/>
                                        </div>
                                        <div class="swiper-slide slide-clients">
                                            <img class="clients-image img-acopi"
                                                 src="theme_pragmatic/static/src/img/logo-acopi.png"/>
                                        </div>
                                        <div class="swiper-slide slide-clients">
                                            <img class="clients-image"
                                                 src="theme_pragmatic/static/src/img/umanizales.png"/>
                                        </div>
                                        <div class="swiper-slide slide-clients">
                                            <img class="clients-image img-transfiriendo"
                                                 src="theme_pragmatic/static/src/img/logo-transfiriendo.png"/>
                                        </div>
                                        <div class="swiper-slide slide-clients">
                                            <img class="clients-image"
                                                 src="theme_pragmatic/static/src/img/logo-oncredit.png"/>
                                        </div>
                                        <div class="swiper-slide slide-clients">
                                            <img class="clients-image"
                                                 src="theme_pragmatic/static/src/img/proyecten.png"/>
                                        </div>
                                        <div class="swiper-slide slide-clients">
                                            <img class="clients-image" src="theme_pragmatic/static/src/img/pura.png"/>
                                        </div>
                                        <div class="swiper-slide slide-clients">
                                            <img class="clients-image img-loggin"
                                                 src="theme_pragmatic/static/src/img/loggin.png"/>
                                        </div>
                                        <div class="swiper-slide slide-clients">
                                            <img class="clients-image"
                                                 src="theme_pragmatic/static/src/img/bluma-design.png"/>
                                        </div>
                                        <div class="swiper-slide slide-clients">
                                            <img class="clients-image img-acopi"
                                                 src="theme_pragmatic/static/src/img/logo-acopi.png"/>
                                        </div>
                                    </div>
                                    <div class="swiper-button-next"/>
                                    <div class="swiper-button-prev"/>
                                    <div class="swiper-pagination"/>
                                </div>

                                <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"/>
                                <script>
                                    var swiper = new Swiper(".clientsSwiper", {
                                    rewind: true,
                                    slidesPerView: 5,
                                    loop: true,
                                    spaceBetween: 0,
                                    centeredSlides: false,
                                    autoplay: {
                                    delay: 6500,
                                    disableOnInteraction: false,
                                    },
                                    pagination: {
                                    el: ".swiper-pagination",
                                    clickable: true,
                                    },
                                    navigation: {
                                    nextEl: ".swiper-button-next",
                                    prevEl: ".swiper-button-prev",
                                    },
                                    });
                                </script>
                            </div>
                        </div>

                        <div class="container-service-II">
                            <div class="row-service-I justify-content-center align-items-start cards">
                                <link rel="stylesheet" href="/../static/src/scss/style_service.scss"/>
                                <div class="col-md-12">
                                    <h4 class="sub-title-inf">Software ERP</h4>
                                    <h1 class="title-inf">Software ERP</h1>
                                    <h4 class="sub-title-service-inf">Facilita la gestión de la cartera para los
                                        clientes
                                        y
                                        equipos de soporte. Se integra con los sistemas del cliente y con cualquier
                                        sistema de pago.
                                    </h4>
                                </div>
                            </div>
                            <div class="container text-center">
                                <div class="row align-items-start">
                                    <div class="col-6">
                                        <div class="card-servicie-bloq">
                                            <img class="location"
                                                 src="theme_pragmatic/static/src/img/software_erp/image-recaudo.png"
                                                 weight="80"
                                                 height="80" alt="location"/>
                                            <h4>Portal de
                                                Recaudos
                                            </h4>
                                            <p class="text-service-inf">Habilita a tus clientes y áreas de soporte para que
                                                puedan consultar y verificar el estado e histórico de las cuentas por
                                                pagar. Nuestro sistema se integra y sincroniza con tus sistemas
                                                contables o de ventas, aplicando y conciliando los pagos.
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-6 ">
                                        <div class="card-servicie-bloq">
                                            <img class="location"
                                                 src="theme_pragmatic/static/src/img/software_erp/image-cobro.png"
                                                 weight="80"
                                                 height="80" alt="location"/>
                                            <h4>Cobros recurrentes
                                            </h4>
                                            <p class="text-service-inf">Permite administrar cuándo y cómo realizará los
                                                cobros. Ejecuta automáticamente los cobros por tarjeta o débito
                                                automático.
                                            </p>
                                        </div>
                                    </div>

                                    <!-- Force next columns to break to new line at md breakpoint and up -->
                                    <div class="w-100 d-none d-md-block"></div>

                                    <div class="col-6 ">
                                        <div class="card-servicie-bloq">
                                            <img class="location"
                                                 src="theme_pragmatic/static/src/img/software_erp/image-abono.png"
                                                 weight="80"
                                                 height="80" alt="location"/>
                                            <h4>Abonos parciales</h4>
                                            <p class="text-service-inf">Administra los pagos parciales a las cuentas
                                                comerciales aplicando y llevando el control de los saldos, estableciendo
                                                montos mínimos.
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-6 ">
                                        <div class="card-servicie-bloq">
                                            <img class="location"
                                                 src="theme_pragmatic/static/src/img/software_erp/image-conciliacion.png"
                                                 weight="80"
                                                 height="80" alt="location"/>
                                            <h4>Conciliación</h4>
                                            <p class="text-service-inf">Realiza los cruces de diferentes fuentes de
                                                información para encontrar diferencias, según las reglas de negocio
                                                existentes.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>
