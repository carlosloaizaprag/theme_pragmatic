<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="page_software_erp" model="website.page">
        <field name="name">Inicio</field>
        <field name="is_published" eval="True"/>
        <field name="key">theme_pragmatic.page_software_erp</field>
        <field name="url">/software_erp</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <t t-name="theme_pragmatic.page_software_erp">
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure">
                        <link rel="stylesheet" href="/../static/src/scss/style_home.scss"/>
                        <div class="container-country parallax">
                            <div class="software_erp_container">
                                <div class="container">
                                    <div class="row align-items-center">
                                        <div class="col-12 col-sm-6">

                                            <h1 class="title-1-service">
                                                Empieza a optimizar con Odoo la <b>Solución</b> integral para
                                                empresas
                                                <b>Modernas</b>
                                            </h1>
                                            <h2 class="sub-title-1-service">
                                                Con Odoo, tu empresa se beneficia de una solución completa y flexible
                                                que abarca desde la gestión de inventario hasta la contabilidad y los
                                                recursos humanos. Esta plataforma integrada optimiza tus operaciones,
                                                simplifica la toma de decisiones y impulsa la eficiencia y el
                                                crecimiento empresarial.
                                            </h2>
                                            <a href="/contact" class="info-button">Mas información</a>
                                        </div>
                                        <div class="col-12 col-sm-6">
                                            <img class="location img-fluid mx-auto d-block"
                                                 src="/theme_pragmatic/static/src/img/software_erp/image-graf-odoo.png"
                                                 weight="400"
                                                 height="450" alt="location"/>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="card-container-servicie text-center">
                            <div class="row-service align-items-center">
                                <div class="col-md-4">
                                    <div class="card-servicie">
                                        <h5 class="service-card-title">
                                            Eficiencia Operativa
                                        </h5>
                                        <p class="sub-text-service">
                                            Centralizas todas las operaciones en una sola plataforma, simplificando la
                                            gestión y optimizando los flujos de trabajo.
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card-servicie">
                                        <h5 class="service-card-title">
                                            Flexibilidad Total
                                        </h5>
                                        <p class="sub-text-service">
                                            Se adapta a tu empresa. Su estructura modular y personalizable te permite
                                            ajustar el sistema según tus necesidades en evolución.
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card-servicie">
                                        <h4 class="service-card-title">
                                            Decisiones Informadas
                                        </h4>
                                        <p class="sub-text-service">
                                            Ofrece datos en tiempo real para respaldar tus decisiones. Con
                                            herramientas de informes, análisis y oportunidades
                                            para el crecimiento empresarial.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-container-servicie-II">
                            <div class="row-service-I justify-content-center align-items-start cards">
                                <link rel="stylesheet" href="/../static/src/scss/style_service.scss"/>
                                <div class="col-md-12">
                                    <h1 class="title-1-service-II">Software ERP</h1>
                                </div>
                            </div>

                            <div class="container-service-II mt-5-servive-II">
                                <div class="row-service-II justify-content-center">
                                    <!-- Columna 1: Contiene la imagen -->
                                    <div class="col-md-6">
                                        <img class="location"
                                             src="/theme_pragmatic/static/src/img/software_erp/image-erp-accordion.png"
                                             weight="300"
                                             height="398" alt="location"/>
                                        <div class="col-md-12-service-I">
                                            <div class="card-servicie-erp">
                                                <h4 class="sub-title-1-service-erp">Conocemas acerca de esta Tecnología
                                                </h4>
                                                <h1 class="title-service-erp">Odoo ERP</h1>
                                                <a href="https://www.odoo.com/es_ES" class="info-button-erp">Mas información</a>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Columna 2: Contiene tres columnas debajo de la imagen -->
                                    <div class="col-md-6">
                                        <div class="row-service-III">
                                            <!-- Columna 2.1 -->
                                            <div class="col-md-12">
                                                <div class="col-md-12">
                                                    <h4 class="sub-title-1-service-I">Software ERP</h4>
                                                    <h1 class="title-1-service-acor-I">¿Qué soluciones se ofrecen?</h1>
                                                </div>
                                                <div class="accordion" id="accordionPanelsStayOpenExample">
                                                    <div class="accordion-item">
                                                        <h2 class="accordion-header">
                                                            <button class="accordion-button" type="button"
                                                                    data-bs-toggle="collapse"
                                                                    data-bs-target="#panelsStayOpen-collapseOne"
                                                                    aria-expanded="true"
                                                                    aria-controls="panelsStayOpen-collapseOne">
                                                                Adaptabilidad y Escalabilidad
                                                            </button>
                                                        </h2>
                                                        <div id="panelsStayOpen-collapseOne"
                                                             class="accordion-collapse collapse show">
                                                            <div class="accordion-body">
                                                                Permite a las empresas adaptar la plataforma a sus
                                                                necesidades específicas. Además, Odoo es altamente
                                                                escalable, lo que significa que puede crecer junto con
                                                                la empresa a medida que esta evoluciona y se expande.
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="accordion-item">
                                                        <h2 class="accordion-header">
                                                            <button class="accordion-button collapsed" type="button"
                                                                    data-bs-toggle="collapse"
                                                                    data-bs-target="#panelsStayOpen-collapseTwo"
                                                                    aria-expanded="false"
                                                                    aria-controls="panelsStayOpen-collapseTwo">
                                                                Acceso a Datos en Tiempo Real
                                                            </button>
                                                        </h2>
                                                        <div id="panelsStayOpen-collapseTwo"
                                                             class="accordion-collapse collapse">
                                                            <div class="accordion-body">
                                                                Con Odoo, las empresas tienen acceso a datos en tiempo
                                                                real sobre todas las áreas de su negocio. Esto facilita
                                                                la toma de decisiones informadas y permite una gestión
                                                                más proactiva y eficaz.
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="accordion-item">
                                                        <h2 class="accordion-header">
                                                            <button class="accordion-button collapsed" type="button"
                                                                    data-bs-toggle="collapse"
                                                                    data-bs-target="#panelsStayOpen-collapseThree"
                                                                    aria-expanded="false"
                                                                    aria-controls="panelsStayOpen-collapseThree">
                                                                Comercio Electrónico
                                                            </button>
                                                        </h2>
                                                        <div id="panelsStayOpen-collapseThree"
                                                             class="accordion-collapse collapse">
                                                            <div class="accordion-body">
                                                                Odoo ofrece una plataforma de comercio electrónico
                                                                integral que permite a las empresas crear y gestionar
                                                                tiendas en línea de manera efectiva, integrando la
                                                                gestión de inventario, ventas y marketing.
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="container-service-II">
                            <div class="row-service-I justify-content-center align-items-start cards">
                                <link rel="stylesheet" href="/../static/src/scss/style_service.scss"/>
                                <div class="col-md-12">
                                    <h4 class="sub-title-inf">Pragmatic Ingeniería</h4>
                                    <h1 class="title-inf">Funcionalidades importantes</h1>
                                    <h4 class="sub-title-service-inf">Odoo proporciona una solución completa e integrada
                                        para la gestión de contabilidad, ventas, compras y puntos de venta, lo que
                                        permite a las empresas optimizar sus operaciones y mejorar la eficiencia en
                                        todas estas áreas.
                                    </h4>
                                </div>
                            </div>
                            <div class="container text-center">
                                <div class="row align-items-start">
                                    <div class="col-6">
                                        <div class="card-servicie-bloq">
                                            <img class="location"
                                                 src="/theme_pragmatic/static/src/img/software_erp/image-contabilidad.png"
                                                 weight="80"
                                                 height="80" alt="location"/>
                                            <h4 class="title-func">Contabilidad y Finanzas</h4>
                                            <p class="text-service-inf">Ofrece una suite completa de herramientas
                                                contables que incluyen gestión de facturas, conciliación bancaria,
                                                generación de informes financieros, gestión de impuestos y control de
                                                costos.
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-6 ">
                                        <div class="card-servicie-bloq">
                                            <img class="location"
                                                 src="/theme_pragmatic/static/src/img/software_erp/image-hr.png"
                                                 weight="80"
                                                 height="80" alt="location"/>
                                            <h4 class="title-func">Gestión de Recursos Humanos (RRHH)</h4>
                                            <p class="text-service-inf">
                                                Comercio Electrónico Proporciona una plataforma
                                                de comercio electrónico integrada que permite a las empresas crear y
                                                gestionar tiendas en línea, gestionar catálogos de productos, procesar
                                                pedidos y gestionar pagos.
                                            </p>
                                        </div>
                                    </div>

                                    <!-- Force next columns to break to new line at md breakpoint and up -->
                                    <div class="w-100 d-none d-md-block"></div>

                                    <div class="col-6 ">
                                        <div class="card-servicie-bloq">
                                            <img class="location"
                                                 src="/theme_pragmatic/static/src/img/software_erp/image-inventario.png"
                                                 weight="80"
                                                 height="80" alt="location"/>
                                            <h4 class="title-func">Gestión de Inventarios</h4>
                                            <p class="text-service-inf">Permite el seguimiento y
                                                control completo del inventario, incluida la gestión de ubicaciones,
                                                control de existencias, gestión de pedidos y seguimiento de movimientos
                                                de inventario.
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-6 ">
                                        <div class="card-servicie-bloq">
                                            <img class="location"
                                                 src="/theme_pragmatic/static/src/img/software_erp/image-shop.png"
                                                 weight="80"
                                                 height="80" alt="location"/>
                                            <h4 class="title-func">Punto de Venta (POS)</h4>
                                            <p class="text-service-inf">Ofrece una solución
                                                completa de punto de venta que incluye gestión de productos,
                                                procesamiento de pagos, gestión de clientes y control de caja.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

