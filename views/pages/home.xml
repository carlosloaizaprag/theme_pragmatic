<odoo>
    <record id="website.homepage" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>


    <record id="page_home" model="website.page">
        <field name="name">Inicio</field>
        <field name="is_published" eval="True"/>
        <field name="key">theme_pragmatic.page_home</field>
        <field name="url">/home-pragmatic</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <t t-name="theme_pragmatic.page_home">

                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure">
                        <link rel="stylesheet" href="/../static/src/scss/style_home.scss"/>

                        <header class="front-page">
                            <div class="content">
                                <h1>Soluciones Integrales TIC para las PYME</h1>
                                <h2>Somos un grupo empresarial de servicios Tecnológicos.</h2>
                                <a href="/contact" class="video-button">Más Información</a>
                            </div>
                        </header>


                        <div class="card-container">
                            <div class="row justify-content-center align-items-center cards">

                                <div class="col-md-12">
                                    <h1 class="title-1">¿En qué podemos ayudarte?</h1>
                                </div>

                                    <div class="card">
                                        <div class="ico-card">
                                            <i class="fa fa-cogs" aria-hidden="true" />
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">Software ERP</h5>
                                            <p class="card-text">
                                                Integra y gestiona todas las funciones empresariales en un solo sistema, mejorando la eficiencia y facilitando la toma de decisiones.
                                            </p>
                                            <div class="d-grid gap-2 d-md-block">
                                                <a href="/contact">
                                                    <button class="boton" type="button">Más Información</button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card">
                                        <div class="ico-card">
                                            <i class="fa fa-handshake-o" aria-hidden="true" />
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">Software CRM</h5>
                                            <p class="card-text">
                                                Gestiona relaciones con clientes para mejorar interacciones y aumentar ventas.
                                            </p>

                                        </div>
                                        <div class="d-grid gap-2 d-md-block">
                                            <a href="/contact">
                                                <button class="boton" type="button">Más Información</button>
                                            </a>
                                        </div>
                                    </div>

                                    <div class="card">
                                        <div class="ico-card">
                                            <i class="fa fa-users" aria-hidden="true" />
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">Consultorías</h5>
                                            <p class="card-text">
                                                Servicios especializados y expertos para ayudar a empresas a resolver problemas, mejorar procesos y tomar decisiones estratégicas.
                                            </p>
                                            <div class="d-grid gap-2 d-md-block">
                                                <a href="/contact">
                                                    <button class="boton" type="button">Más Información</button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                <div class="row justify-content-center align-items-center cards">

                                    <div class="card">
                                        <div class="ico-card">
                                            <i class="fa fa-mobile" aria-hidden="true" />
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">Aplicaciones Móviles</h5>
                                            <p class="card-text">
                                                Programas para smartphones que ofrecen funciones diversas para mejorar la experiencia del usuario y brindar servicios en cualquier momento y lugar.
                                            </p>
                                            <div class="d-grid gap-2 d-md-block">
                                                <a href="/contact">
                                                    <button class="boton" type="button">Más Información</button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card">
                                        <div class="ico-card">
                                            <i class="fa fa-code" aria-hidden="true" />
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">Desarrollos a la Medida</h5>
                                            <p class="card-text">
                                                Soluciones de software personalizadas, creadas específicamente para satisfacer las necesidades únicas de una empresa o individuo.
                                            </p>
                                            <div class="d-grid gap-2 d-md-block">
                                                <a href="/contact">
                                                    <button class="boton" type="button">Más Información</button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>



                            </div>

                        </div>

                        <div class="carousel-header">
                            <div class="col-md-12">
                                <h2 class="sub-title-1">Compañías que han confiado en nosotros</h2>
                            </div>
                        </div>

                        <div class="clients">
                            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"/>
                            <div class="swiper clientsSwiper">
                                <div class="swiper-wrapper">
                                  <div class="swiper-slide slide-clients div-one">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/umanizales.png" />
                                  </div>
                                  <div class="swiper-slide slide-clients">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/urt.png" />
                                  </div>
                                  <div class="swiper-slide slide-clients">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/logo-transfiriendo.png" />
                                  </div>
                                  <div class="swiper-slide slide-clients">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/logo-oncredit.png" />
                                  </div>
                                  <div class="swiper-slide slide-clients">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/proyecten.png" />
                                  </div>
                                  <div class="swiper-slide slide-clients">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/pura.png" />
                                  </div>
                                  <div class="swiper-slide slide-clients">
                                      <img class="clients-image" src="aliado tecnologico" />
                                  </div>
                                    <div class="swiper-slide slide-clients">
                                        <img class="clients-image" src="theme_pragmatic/static/src/img/bluma-design.png" />
                                    </div>
                                  <div class="swiper-slide slide-clients">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/logo-acopi.png" />
                                  </div>
                                  <div class="swiper-slide slide-clients">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/umanizales.png" />
                                  </div>
                                  <div class="swiper-slide slide-clients">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/urt.png" />
                                  </div>
                                  <div class="swiper-slide slide-clients">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/logo-transfiriendo.png" />
                                  </div>
                                  <div class="swiper-slide slide-clients">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/logo-oncredit.png" />
                                  </div>
                                  <div class="swiper-slide slide-clients">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/proyecten.png" />
                                  </div>
                                  <div class="swiper-slide slide-clients">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/pura.png" />
                                  </div>
                                  <div class="swiper-slide slide-clients">
                                      <img class="clients-image" src="aliado tecnologico" />
                                  </div>
                                    <div class="swiper-slide slide-clients">
                                        <img class="clients-image" src="theme_pragmatic/static/src/img/bluma-design.png" />
                                    </div>
                                  <div class="swiper-slide slide-clients">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/logo-acopi.png" />
                                  </div>
                                </div>
                                <div class="swiper-button-next" />
                                <div class="swiper-button-prev" />
                                <div class="swiper-pagination" />
                              </div>

                            <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js" />
                            <script>
                                var swiper = new Swiper(".clientsSwiper", {
                                  rewind: true,
                                  slidesPerView: 5,
                                  loop: true,
                                  spaceBetween: 0,
                                  centeredSlides: false,
                                  autoplay: {
                                    delay: 6500,
                                    disableOnInteraction: false,
                                  },
                                  pagination: {
                                    el: ".swiper-pagination",
                                    clickable: true,
                                  },
                                  navigation: {
                                    nextEl: ".swiper-button-next",
                                    prevEl: ".swiper-button-prev",
                                  },
                                });
                              </script>
                        </div>

                        <div class="space"></div>

                        <div class="home-carousel">
                            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"/>
                            <div class="swiper mySwiper">
                                <div class="swiper-wrapper">
                                  <div class="swiper-slide slide-my"><img src="theme_pragmatic/static/src/img/wallpaper-two.png" /></div>
                                  <div class="swiper-slide slide-my"><img src="theme_pragmatic/static/src/img/wallpaper-one.png" /></div>
                                  <div class="swiper-slide slide-my"><img src="theme_pragmatic/static/src/img/wallpaper-three.png" /></div>
                                  <div class="swiper-slide slide-my"><img src="theme_pragmatic/static/src/img/wallpaper-one.png" /></div>
                                  <div class="swiper-slide slide-my"><img src="theme_pragmatic/static/src/img/wallpaper-two.png" /></div>
                                  <div class="swiper-slide slide-my"><img src="theme_pragmatic/static/src/img/wallpaper-one.png" /></div>
                                  <div class="swiper-slide slide-my"><img src="theme_pragmatic/static/src/img/wallpaper-three.png" /></div>
                                  <div class="swiper-slide slide-my"><img src="theme_pragmatic/static/src/img/wallpaper-one.png" /></div>
                                </div>
                                <div class="swiper-button-next" />
                                <div class="swiper-button-prev" />
                                <div class="swiper-pagination" />
                              </div>

                            <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js" />
                            <script>
                                var swiper = new Swiper(".mySwiper", {
                                  rewind: true,
                                  slidesPerView: 4,
                                  loop: true,
                                  spaceBetween: 0,
                                  centeredSlides: false,
                                  autoplay: {
                                    delay: 3500,
                                    disableOnInteraction: false,
                                  },
                                  pagination: {
                                    el: ".swiper-pagination",
                                    clickable: true,
                                  },
                                  navigation: {
                                    nextEl: ".swiper-button-next",
                                    prevEl: ".swiper-button-prev",
                                  },
                                });
                              </script>
                        </div>

                        <div class="container-country parallax">
                            <div class="container-country-elements">
                                <div class="country-text">
                                    <h5 class="sub-title-2">Unificando mercados en América Latina</h5>
                                    <h2 class="text-1">Conformado por cuatro empresas con presencia en <span style="color:#03A63C">Colombia, Argentina y Ecuador</span></h2>
                                </div>
                                <div class="country-image">
                                    <img class="country-image-1" src="theme_pragmatic/static/src/img/wallpaperpragma.png" alt="..." />
                                </div>
                            </div>
                        </div>

                        <div class="about-home">
                            <div class="about-home-images">
                                <div class="about-home-images-1">
                                    <div class="about-image-1" />
                                    <div class="about-image-2" />
                                </div>
                                <div class="about-home-images-2">
                                    <div class="about-image-3" />
                                </div>
                            </div>
                            <div class="about-home-text">
                                <h6 class="about-company-text">Sobre nuestra compañía</h6>
                                <h2 class="about-home-company">Pragmatic Ingenieria</h2>
                                <p class="about-text">
                                    Somos una empresa que facilita a las corporaciones la interacción de sus actores dentro de una cadena de valor.
                                    <br />
                                    <br />
                                    Integramos procesos e información a través de soluciones tecnológicas innovadoras que ayudan a transitar el camino al consumidor final.
                                </p>
                            </div>
                        </div>

                        <div class="space"></div>

                        <div class="container-partners">
                            <div class="col-md-12 partners-text">
                                <h2 class="sub-title-5">Nuestros Aliados</h2>
                                <h5 class="title-6">Nos complementan</h5>
                            </div>
                            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"/>
                            <div class="swiper partnersSwiper">
                                <div class="swiper-wrapper">
                                  <div class="swiper-slide slider-partners">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/logo-oncredit.png" />
                                  </div>
                                  <div class="swiper-slide slider-partners">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/proyecten.png" />
                                  </div>
                                  <div class="swiper-slide slider-partners">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/logo-oncredit.png" />
                                  </div>
                                  <div class="swiper-slide slider-partners">
                                      <img class="clients-image" src="theme_pragmatic/static/src/img/proyecten.png" />
                                  </div>
                                </div>
                                <div class="swiper-button-next" />
                                <div class="swiper-button-prev" />
                                <div class="swiper-pagination" />
                              </div>

                            <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js" />
                            <script>
                                var swiper = new Swiper(".partnersSwiper", {
                                  rewind: true,
                                  slidesPerView: 2,
                                  loop: true,
                                  spaceBetween: 0,
                                  centeredSlides: false,
                                  autoplay: {
                                    delay: 6500,
                                    disableOnInteraction: false,
                                  },
                                  pagination: {
                                    el: ".swiper-pagination",
                                    clickable: true,
                                  },
                                  navigation: {
                                    nextEl: ".swiper-button-next",
                                    prevEl: ".swiper-button-prev",
                                  },
                                });
                              </script>
                        </div>


                    </div>


                </t>

            </t>
        </field>
    </record>

</odoo>
