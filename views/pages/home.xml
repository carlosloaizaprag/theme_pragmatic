<odoo>
    <record id="website.homepage" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>


    <record id="page_home" model="website.page">
        <field name="name">Inicio</field>
        <field name="is_published" eval="True"/>
        <field name="key">theme_pragmatic.page_home</field>
        <field name="url">/home-pragmatic</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <t t-name="theme_pragmatic.page_home">

                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure">
                        <header class="front-page">
                            <div class="content">
                                <h1>Soluciones Integrales TIC para las PYME</h1>
                                <h2>Equipo multidisciplinario que te ofrece servicios tecnologicos.</h2>
                                <a href="/contact" class="info-button">Más Información</a>
                            </div>
                        </header>


                        <div class="card-container">
                            <div class="d-flex flex-column justify-content-center align-items-start">

                                <div class="col-md-12">
                                    <h1 class="title-1-service-II align-items-center justify-content-center">¿En qué
                                        podemos ayudarte?
                                    </h1>
                                </div>
                            </div>
                            <div class="container">
                                <div class="row gap-4 justify-content-center">

                                    <div class="card-home">
                                        <div class="ico-card">
                                            <i class="fa fa-cogs" aria-hidden="true"/>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">Software ERP</h5>
                                            <p class="card-text">
                                                Integra y gestiona todas las funciones empresariales en un solo
                                                sistema,
                                                mejorando la eficiencia y facilitando la toma de decisiones.
                                            </p>
                                            <div class="d-grid gap-2 d-md-block">
                                                <a href="/software_erp">
                                                    <button class="boton" type="button">Más Información</button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="card-home">
                                        <div class="ico-card">
                                            <i class="fa fa-handshake-o" aria-hidden="true"/>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">Software CRM</h5>
                                            <p class="card-text" style="height:96px">
                                                Gestiona relaciones con clientes para mejorar interacciones y
                                                aumentar
                                                ventas.
                                            </p>

                                        </div>
                                        <div class="d-grid gap-2 d-md-block">
                                            <a href="/software_crm">
                                                <button class="boton" type="button">Más Información</button>
                                            </a>
                                        </div>
                                    </div>


                                    <div class="card-home">
                                        <div class="ico-card">
                                            <i class="fa fa-users" aria-hidden="true"/>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">Consultorías</h5>
                                            <p class="card-text">
                                                Servicios especializados y expertos para ayudar a empresas a
                                                resolver
                                                problemas,
                                                mejorar procesos y tomar decisiones estratégicas.
                                            </p>
                                            <div class="d-grid gap-2 d-md-block">
                                                <a href="/consultorias">
                                                    <button class="boton" type="button">Más Información</button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="card-home">
                                        <div class="ico-card">
                                            <i class="fa fa-mobile" aria-hidden="true"/>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">Aplicaciones Móviles</h5>
                                            <p class="card-text">
                                                Programas para smartphones que ofrecen funciones diversas para
                                                mejorar
                                                la
                                                experiencia del usuario y brindar servicios en cualquier momento y
                                                lugar.
                                            </p>
                                            <div class="d-grid gap-2 d-md-block">
                                                <a href="/mobile_apps">
                                                    <button class="boton" type="button">Más Información</button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="card-home">
                                        <div class="ico-card">
                                            <i class="fa fa-code" aria-hidden="true"/>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">Desarrollos a la Medida</h5>
                                            <p class="card-text">
                                                Soluciones de software personalizadas, creadas específicamente para
                                                satisfacer las necesidades únicas de una empresa o individuo.
                                            </p>
                                            <div class="d-grid gap-2 d-md-block">
                                                <a href="/development">
                                                    <button class="boton" type="button">Más Información</button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="home-carousel-1">
                            <div class="col-md-12">
                                <h2 class="sub-title-1-home">Compañías que han confiado en nosotros</h2>
                            </div>
                            <div class="swiper mySwiper">
                                <div class="swiper-wrapper">
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/logos/umanizales.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/logos/transfiriendo.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/logos/oncredit.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/logos/proyecten.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/logos/pura.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/logos/loggin.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/logos/bluma.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/logos/acopi.png"/>
                                    </div>
                                </div>
                                <div class="swiper-pagination"/>
                            </div>

                        </div>

                        <div class="space" style="height: 120px"></div>

                        <div class="home-carousel-2">
                            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"/>
                            <div class="swiper mySwiper">
                                <div class="swiper-wrapper">
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/wallpaper-two.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/wallpaper-one.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/wallpaper-three.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/wallpaper-one.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/wallpaper-two.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/wallpaper-one.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/wallpaper-three.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="theme_pragmatic/static/src/img/wallpaper-one.png"/>
                                    </div>
                                </div>
                                <div class="swiper-button-next"/>
                                <div class="swiper-button-prev"/>
                                <div class="swiper-pagination"/>
                            </div>
                        </div>

                        <div class="container-country parallax">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-12 col-sm-12 col-lg-6 col-sm-6">
                                        <h2 class="text-1">Constituidos desde 2016 y con presencia en
                                            <span style="color:#03A63C">Manizales, Caldas.</span>
                                        </h2>
                                    </div>
                                    <div class="col-12 col-sm-12 col-lg-6 col-sm-6">
                                        <img class="location img-fluid mx-auto d-block"
                                             src="theme_pragmatic/static/src/img/wallpaperpragma.png" alt="..."/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="home-carousel-3">
                            <div class="col-md-12 stile-title">
                                <h2 class="sub-title-5">Nuestros Aliados</h2>
                                <h5 class="title-6">Nos complementan</h5>
                            </div>
                            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"/>
                            <div class="swiper mySwiper">
                                <div class="swiper-wrapper">
                                    <div class="swiper-slide">
                                        <img class="imagin-home"
                                             src="theme_pragmatic/static/src/img/logos/oncredit.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img class="imagin-home"
                                             src="theme_pragmatic/static/src/img/logos/proyecten.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img class="imagin-home"
                                             src="theme_pragmatic/static/src/img/logos/loggin.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img class="imagin-home"
                                             src="theme_pragmatic/static/src/img/logos/oncredit.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img class="imagin-home"
                                             src="theme_pragmatic/static/src/img/logos/proyecten.png"/>
                                    </div>
                                    <div class="swiper-slide">
                                        <img class="imagin-home"
                                             src="theme_pragmatic/static/src/img/logos/loggin.png"/>
                                    </div>
                                </div>
                                <div class="swiper-pagination"/>
                            </div>
                        </div>
                    </div>
                    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"/>
                    <script src="/theme_pragmatic/static/src/js/carousel.js"/>
                </t>
            </t>
        </field>
    </record>

</odoo>
