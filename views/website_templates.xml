<odoo>

    <!--Desactivar encabezado por defecto-->
    <record id="website.template_header_default" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!--Desactivar Pié de página por defecto-->
    <record id="website.footer_custom" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!--Encabezado-->
    <record id="header" model="ir.ui.view">
        <field name="name">Pragmatic Header</field>
        <field name="type">qweb</field>
        <field name="key">theme_pragmatic.header</field>
        <field name="inherit_id" ref="website.layout"/>
        <field name="mode">extension</field>
        <field name="arch" type="xml">

            <xpath expr="//header//nav" position="replace">
                <link rel="styleshet" type="text/css" href="../static/src/scss/website_templates.scss"></link>

                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container">
                        <a class="navbar-brand" href="/home-pragmatic">
                            <img class="logo" src="/theme_pragmatic/static/src/img/logo-pragma.png" weight="80"
                                 height="60" alt="Logo"/>
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse justify-content-center" id="navbarNavDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/home-pragmatic">
                                        Inicio
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Servicios
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <li>
                                            <a class="dropdown-item" href="/software_erp">Software ERP</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/contact">Software CRM</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/contact">Consultorías</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/contact">Aplicaciones Móviles</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/contact">Desarrollos a la Medida</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/contact">Contacto</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/blog">Blog</a>
                                </li>
                            </ul>

                            <button type="button" href="/contact" class="btn-contactus">Iniciar Sesión</button>
                        </div>
                    </div>
                </nav>
            </xpath>
        </field>
    </record>

    <!--Píe de página-->
    <record id="footer" model="ir.ui.view">
        <field name="name">Pragmatic Footer</field>
        <field name="type">qweb</field>
        <field name="key">theme_pragmatic.footer</field>
        <field name="inherit_id" ref="website.layout"/>
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='footer']" position="replace">
                <!-- Contenido del pie de página aquí -->

                <script type="text/javascript">
                    // Tu script JavaScript aquí
                    alert('Hola, mundo desde el pie de página!');
                </script>

                <!-- Contenido del pie de página aquí -->
            </xpath>
        </field>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='footer']" position="replace">
                <div id="footer" style="margin:0 auto; width: 90%">
                    <div class="footer_content">
                        <hr/>
                        <section class="footer ">
                            <div class="d-flex gap-4 gap-lg-0 justify-content-center justify-content-lg-between flex-wrap">
                                <div class="d-flex flex-column justify-content-between">
                                    <div>
                                        <h5 class="card-title-foorter">
                                            Información de Contacto
                                        </h5>
                                        <p class="card-title-inf">Manizales, Caldas</p>
                                        <p class="card-title-inf">Calle 69 # 24-36</p>
                                        <p class="card-title-inf">+57 (315) 657 7323</p>
                                        <p class="card-title-inf">pragmatic@pragmaticingenieria.com</p>
                                        <div class="d-flex align-items-center justify-content-start  container-icons-website">
                                            <a href="https://www.facebook.com/p/Pragmatic-Ingenier%C3%ADa-SAS-100057687180016/">
                                                <img class="hover-icons-footer"
                                                     src="/theme_pragmatic/static/src/img/inicio/image-facebook.png"
                                                     weight="40"
                                                     height="40"/>
                                            </a>
                                            <a href="#">
                                                <img class="hover-icons-footer"
                                                     src="/theme_pragmatic/static/src/img/inicio/image-youtube.png"
                                                     weight="40"
                                                     height="40"/>
                                            </a>
                                            <a href="https://www.instagram.com/pragmaticing/">
                                                <img class="hover-icons-footer"
                                                     src="/theme_pragmatic/static/src/img/inicio/image-instagram.png"
                                                     weight="40"
                                                     height="40"/>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex flex-column justify-content-center  justify-content-evenly align-items-center">
                                    <div class="d-flex align-items-center" style="color: #3F81AC; margin-bottom:6px">
                                        <a class="navbar-brand" href="/inicio-pragmatic">
                                            <img class="logo" src="/theme_pragmatic/static/src/img/logo-pragma.png"
                                                 weight="140"
                                                 height="120" alt="Logo"/>
                                        </a>
                                    </div>
                                </div>
                                <div class="container-options-services">
                                    <div>
                                        <h5 class="card-title-foorter">Servicios</h5>
                                    </div>
                                    <div class="d-flex flex-row ">
                                        <div class="highlight-on-hover">
                                            <p class="p-service">
                                                <a href="#">Software ERP</a>
                                            </p>
                                            <p class="p-service">
                                                <a href="#">Software CRM</a>
                                            </p>
                                            <p class="p-service">
                                                <a href="#">Consultorías</a>
                                            </p>
                                            <p class="p-service">
                                                <a href="#">Monitoreo de Medios</a>
                                            </p>
                                            <p class="p-service">
                                                <a href="#">Aplicaciones Móviles</a>
                                            </p>
                                            <p class="p-service">
                                                <a href="#">Desarrollos a la Medida</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr/>
                            <div class="text-center card-title-cookie" style="margin-bottom:20px">
                                <p style="font-size:12px">Pragmatic Ingeniería. Soluciones integrales Tic para las Pyme.
                                    Todos
                                    los derechos Reservados
                                    @2024
                                </p>
                                <p style="font-size:12px">Aviso Legal Política de Cookies Política de Privacidad</p>
                            </div>
                        </section>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[hasclass('o_footer_copyright')]" position="replace">
            </xpath>
        </field>
    </record>
</odoo>