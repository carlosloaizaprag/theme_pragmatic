<odoo>

    <!--Desactivar encabezado por defecto-->
    <record id="website.template_header_default" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!--Desactivar Pié de página por defecto-->
    <record id="website.footer_custom" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!--Encabezado-->
    <record id="header" model="ir.ui.view">
        <field name="name">Pragmatic Header</field>
        <field name="type">qweb</field>
        <field name="key">theme_pragmatic.header</field>
        <field name="inherit_id" ref="website.layout"/>
        <field name="mode">extension</field>
        <field name="arch" type="xml">

            <xpath expr="//header//nav" position="replace">
                <link rel="styleshet" type="text/css" href="../static/src/scss/website_templates.scss"></link>

                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container">
                        <a class="navbar-brand" href="/home-pragmatic">
                            <img class="logo" src="theme_pragmatic/static/src/img/logo-pragma.png" weight="80"
                                 height="60" alt="Logo"/>
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse justify-content-center" id="navbarNavDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/home-pragmatic">
                                        Inicio
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Servicios
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <li>
                                            <a class="dropdown-item" href="/contact">Software ERP</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/contact">Software CRM</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/contact">Consultorías</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/contact">Aplicaciones Móviles</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/contact">Desarrollos a la Medida</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/contact">Contacto</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/blog">Blog</a>
                                </li>
                            </ul>

                            <button type="button" href="/contact" class="btn-contactus">Iniciar Sesión</button>
                        </div>



                    </div>
                </nav>


            </xpath>
        </field>
    </record>

    <!--Píe de página-->
    <record id="footer" model="ir.ui.view">
        <field name="name">Pragmatic Footer</field>
        <field name="type">qweb</field>
        <field name="key">theme_pragmatic.footer</field>
        <field name="inherit_id" ref="website.layout"/>
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='footer']" position="replace">
                <!-- Contenido del pie de página aquí -->

                <script type="text/javascript">
                    // Tu script JavaScript aquí
                    alert('Hola, mundo desde el pie de página!');
                </script>

                <!-- Contenido del pie de página aquí -->
            </xpath>
        </field>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='footer']" position="replace">
                <div id="footer" class="oe_structure oe_structure_solo" t-ignore="true" t-if="not no_footer">

                    <footer>
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-5">
                                    <h3 class="title-footer">Pragmatic Ingenieria</h3>
                                    <p>
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                                          <path fill-rule="evenodd" d="M4.5 2.25a.75.75 0 000 1.5v16.5h-.75a.75.75 0 000 1.5h16.5a.75.75 0 000-1.5h-.75V3.75a.75.75 0 000-1.5h-15zM9 6a.75.75 0 000 1.5h1.5a.75.75 0 000-1.5H9zm-.75 3.75A.75.75 0 019 9h1.5a.75.75 0 010 1.5H9a.75.75 0 01-.75-.75zM9 12a.75.75 0 000 1.5h1.5a.75.75 0 000-1.5H9zm3.75-5.25A.75.75 0 0113.5 6H15a.75.75 0 010 1.5h-1.5a.75.75 0 01-.75-.75zM13.5 9a.75.75 0 000 1.5H15A.75.75 0 0015 9h-1.5zm-.75 3.75a.75.75 0 01.75-.75H15a.75.75 0 010 1.5h-1.5a.75.75 0 01-.75-.75zM9 19.5v-2.25a.75.75 0 01.75-.75h4.5a.75.75 0 01.75.75v2.25a.75.75 0 01-.75.75h-4.5A.75.75 0 019 19.5z" clip-rule="evenodd" />
                                        </svg>
                                        Manizales, Caldas
                                    </p>
                                    <p>
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                                          <path fill-rule="evenodd" d="M11.54 22.351l.07.04.028.016a.76.76 0 00.723 0l.028-.015.071-.041a16.975 16.975 0 001.144-.742 19.58 19.58 0 002.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 00-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 002.682 2.282 16.975 16.975 0 001.145.742zM12 13.5a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                                        </svg>
                                        Calle 69 #24-36
                                    </p>
                                    <p>
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                                          <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 013-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 01-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 006.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 011.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 01-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5z" clip-rule="evenodd" />
                                        </svg>
                                        +57 301 605 2808
                                    </p>
                                    <p>
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                                          <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
                                          <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
                                        </svg>
                                        info@pragmaticingenieria.com
                                    </p>
                                </div>
                                <div class="col-lg-6">
                                    <h3 class="title-footer">Nuestras soluciones</h3>
                                    <ul class="footer-solutions">
                                        <li>
                                            <a href="/contact">Implantación ERP</a>
                                        </li>
                                        <li>
                                            <a href="/contact">Sistema POS</a>
                                        </li>
                                        <li>
                                            <a href="/contact">Consultorias</a>
                                        </li>
                                        <li>
                                            <a href="/contact">Desarrollos a la medida</a>
                                        </li>
                                    </ul>
                                </div>
                                <hr></hr>
                                <div class="col-lg-12 footer-img">
                                    <a href="/home-pragmatic">
                                        <img src="theme_pragmatic/static/src/img/logo-pragma.png" weight="90"
                                             height="70" alt="Logo"/>
                                    </a>
                                </div>
                                <hr></hr>
                                <div class="col-lg-6">
                                    <ul class="footer-links">
                                        <li>
                                            <a href="#">Aviso de privacidad</a>
                                        </li>
                                        <li>
                                            <a href="#">Política de Datos</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </footer>

                </div>
            </xpath>
        </field>
    </record>
</odoo>